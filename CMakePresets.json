{
    "version": 4,
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "toolset": {
              "value": "host=x64"
            },
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
              //"CMAKE_C_COMPILER": "cl.exe",
              //"CMAKE_CXX_COMPILER": "cl.exe",
              "CMAKE_TOOLCHAIN_FILE": "external/vcpkg/scripts/buildsystems/vcpkg.cmake"
            },
            "condition": {
              "type": "equals",
              "lhs": "${hostSystemName}",
              "rhs": "Windows"
            }
        },
        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "inherits": "windows-base",
            "architecture": {
              "value": "x64",
              "strategy": "external"
            },
            "toolset": {
              "value": "host=x64"
            }
            //"cacheVariables": {
            //    "CMAKE_BUILD_TYPE": "Debug"
            //}
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "inherits": "x64-debug"
            //"cacheVariables": {
            //    "CMAKE_BUILD_TYPE": "Release"
            //}
        },
        {
            "name": "x86-debug",
            "displayName": "x86 Debug",
            "inherits": "windows-base",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "toolset": {
              "value": "host=x86"
            }
        },
        {
            "name": "x86-release",
            "displayName": "x86 Release",
            "inherits": "x86-debug"
        }
    ],
    "buildPresets": [
        {
            "name": "x64-release",
            "configurePreset": "x64-release",
            "configuration": "Release"
        },
        {
            "name": "x64-debug",
            "configurePreset": "x64-debug",
            "configuration": "Debug"
        },
        {
            "name": "x86-debug",
            "configurePreset": "x86-debug",
            "configuration": "Debug"
        },
        {
            "name": "x86-release",
            "configurePreset": "x86-release",
            "configuration": "Release"
        }
    ],
    "launchPresets": [
        {
            "name": "debug-launch",
            "hidden": false,
            "description": "Launch TheWheel Debug",
            "presetName": "x64-debug",
            "target": "TheWheel",
            "configuration": "Debug"
        },
        {
            "name": "release-launch",
            "hidden": false,
            "description": "Launch TheWheel Release",
            "presetName": "x64-release",
            "target": "TheWheel",
            "configuration": "Release"
        }
    ]
}
